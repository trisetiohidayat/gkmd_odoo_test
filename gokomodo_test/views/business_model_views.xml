<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="gokomodo_business_model_tree" model="ir.ui.view">
        <field name="name">gokomodo.business.model.tree</field>
        <field name="model">gokomodo.business.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="short_name"/>
            </tree>
        </field>
    </record>

    <record id="gokomodo_business_model_form" model="ir.ui.view">
        <field name="name">gokomodo.business.model.form</field>
        <field name="model">gokomodo.business.model</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="short_name"/>
            </form>
        </field>
    </record>

    <record id="gokomodo_business_model_action" model="ir.actions.act_window">
        <field name="name">Business Model</field>
        <field name="res_model">gokomodo.business.model</field>
    </record>
</odoo>
